{
  "name": "@aminzer/typescript-project-base",
  "version": "0.0.1",
  "description": "Base structure for project using TypeScript",
  "keywords": [
    "typescript",
    "project",
    "base",
    "structure",
    "scaffolding"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aminzer/typescript-project-base.git"
  },
  "license": "MIT",
  "author": "aminzer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf dist",
    "dev": "npm-run-all build --parallel build:watch start:watch",
    "husky:prepare": "husky install",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "run-s husky:prepare rebuild",
    "rebuild": "run-s clean build",
    "start": "node .",
    "start:watch": "nodemon .",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.2.2",
    "typescript": "5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
